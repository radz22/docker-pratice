{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "docker:build": "docker build -t my-frontend-app .",
    "docker:run": "docker ps -q --filter 'ancestor=my-frontend-app' | xargs -r docker stop && docker run --rm -p 3000:3000 --env-file .env my-frontend-app",
    "docker:run:detached": "docker run -d -p 3000:3000 --env-file .env --name frontend-app my-frontend-app",
    "docker:stop": "docker stop frontend-app || true",
    "docker:remove": "docker rm frontend-app || true",
    "docker:restart": "npm run docker:stop && npm run docker:remove && npm run docker:run:detached",
    "docker:logs": "docker logs -f frontend-app",
    "docker:ps": "docker ps -a",
    "docker:kill-port": "docker ps -q --filter publish=3000 | xargs -r docker stop",
    "docker:rebuild": "npm run docker:build && npm run docker:run",
    "docker:clean": "docker system prune -f",
    "docker:clean:all": "docker system prune -a -f",
    "lint": "eslint"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/postcss": "^4.1.17",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.559.0",
    "next": "16.0.8",
    "postcss": "^8.5.6",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.8",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
