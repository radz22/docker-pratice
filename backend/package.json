{
  "name": "backend",
  "version": "1.0.0",
  "description": "Express TypeScript API with Prisma and MongoDB",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "docker:build": "docker build -t my-backend-app .",
    "docker:run": "docker ps -q --filter 'ancestor=my-backend-app' | xargs -r docker stop && docker run --rm -p 3001:3001 --env-file .env my-backend-app",
    "docker:run:detached": "docker run -d -p 3001:3001 --env-file .env --name backend-app my-backend-app",
    "docker:stop": "docker stop backend-app || true",
    "docker:remove": "docker rm backend-app || true",
    "docker:restart": "npm run docker:stop && npm run docker:remove && npm run docker:run:detached",
    "docker:logs": "docker logs -f backend-app",
    "docker:ps": "docker ps -a",
    "docker:kill-port": "docker ps -q --filter publish=3001 | xargs -r docker stop",
    "docker:rebuild": "npm run docker:build && npm run docker:run",
    "docker:clean": "docker system prune -f",
    "docker:clean:all": "docker system prune -a -f"
  },
  "keywords": [
    "express",
    "typescript",
    "prisma",
    "mongodb"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "prisma": "^5.19.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  }
}
